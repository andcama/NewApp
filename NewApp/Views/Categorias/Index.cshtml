@model IEnumerable<Categoria>

<h1>Gestión de Categorías</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nueva Categoría</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Activa</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var categoria in Model)

        {
            <tr>
                <td>@categoria.nIdCategori</td>
                <td>@categoria.cNombCateg</td>
                <td>@(categoria.cEsActiva == 'S' ? "Sí" : "No")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@categoria.nIdCategori">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@categoria.nIdCategori">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>